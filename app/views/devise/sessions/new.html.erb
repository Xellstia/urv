<%= render "devise/shared/auth_card", subtitle: "Авторизация" do %>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-5" }) do |f| %>
    <div class="space-y-2">
      <%= f.email_field :email,
            autofocus: true,
            autocomplete: "email",
            placeholder: "Email",
            class: "w-full rounded-full border border-slate-200 bg-slate-50 px-4 py-3 text-[15px] text-slate-900 placeholder:text-slate-400 focus:outline-none focus:ring-2 focus:ring-blue-500/15 focus:border-blue-200 transition" %>
    </div>

    <div class="space-y-2">
      <%= f.password_field :password,
            autocomplete: "current-password",
            placeholder: "Пароль",
            class: "w-full rounded-full border border-slate-200 bg-slate-50 px-4 py-3 text-[15px] text-slate-900 placeholder:text-slate-400 focus:outline-none focus:ring-2 focus:ring-blue-500/15 focus:border-blue-200 transition" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="flex items-center justify-between text-sm text-slate-600 pt-1">
        <label class="flex items-center gap-2">
          <%= f.check_box :remember_me, class: "rounded border-slate-300 text-blue-600 focus:ring-blue-500" %>
          Запомнить меня
        </label>
        <% if devise_mapping.recoverable? %>
          <%= link_to "Забыли пароль?", new_password_path(resource_name), class: "text-blue-600 hover:underline font-medium" %>
        <% end %>
      </div>
    <% end %>

    <%= f.submit "Войти",
          class: "w-full rounded-full bg-blue-600 py-3 text-white text-[15px] font-semibold shadow hover:bg-blue-700 transition" %>
  <% end %>

  <% if devise_mapping.registerable? %>
    <div class="text-sm text-center text-slate-500 pt-2">
      Нет аккаунта?
      <%= link_to "Зарегистрироваться", new_registration_path(resource_name), class: "font-medium text-blue-600 hover:underline" %>
    </div>
  <% end %>
<% end %>
