<%# Меню настроек категории %>
<% category = local_assigns[:category] %>

<details class="relative z-10" data-template-category-ignore="true" onclick="event.stopPropagation();">
  <summary class="list-none inline-flex h-10 w-10 items-center justify-center rounded-2xl border border-white/30 bg-white/10 hover:bg-white/20 cursor-pointer">
    <%= image_tag "ui/gear.svg", class: "h-5 w-5", alt: "" %>
  </summary>
  <div class="absolute right-0 top-full mt-1 min-w-[160px] rounded-lg border bg-white py-1 shadow-md z-20">
    <button type="button"
            class="block w-full text-left px-3 py-1.5 text-[13px] text-slate-700 hover:bg-slate-50"
            data-template-category-ignore="true"
            data-action="template-category#startEdit">
      Переименовать
    </button>
    <%= button_to template_category_path(category),
                  method: :delete,
                  data: { turbo_confirm: "Удалить категорию?" },
                  class: "block w-full text-left px-3 py-1.5 text-[13px] text-red-600 hover:bg-red-50",
                  form: { class: "w-full" } do %>
      Удалить
    <% end %>
  </div>
</details>
