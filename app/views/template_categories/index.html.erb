<div class="max-w-7xl mx-auto w-full space-y-5 mt-8 px-4">
  <!-- Заголовок раздела -->
  <div class="flex flex-col gap-3 sm:flex-row sm:items-center sm:justify-between">
    <div class="text-lg font-semibold text-slate-700">Шаблоны</div>
    <%= form_with model: @new_category,
                  url: template_categories_path,
                  class: "flex w-full gap-3 sm:w-auto" do |f| %>
      <%= f.text_field :name,
                       placeholder: "Название категории",
                       class: "flex-1 rounded-xl border border-slate-200 px-3 py-2 text-[14px] focus:outline-none focus:ring-2 focus:ring-blue-500/30 bg-white" %>
      <%= f.submit "Добавить категорию", class: "btn-primary whitespace-nowrap" %>
    <% end %>
  </div>

  <!-- Категории -->
  <div class="space-y-4">
    <% @categories.each do |cat| %>
      <%= render "template_categories/category", category: cat %>
    <% end %>
  </div>
</div>
