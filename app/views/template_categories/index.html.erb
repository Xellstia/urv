<div class="space-y-4 mt-8">
  <!-- Заголовок раздела -->
  <div class="ts-rail">
    <div class="ts-strip px-4">
      <div class="py-1">
        <div class="flex items-center justify-between">
          <div class="text-base font-semibold text-slate-700">Шаблоны</div>
          <%= form_with model: @new_category, url: template_categories_path, class: "flex gap-2" do |f| %>
            <%= f.text_field :name, placeholder: "Название категории", class: "rounded-xl border border-slate-200 px-3 py-2 text-[14px] focus:outline-none focus:ring-2 focus:ring-blue-500/30" %>
            <%= f.submit "Добавить категорию", class: "btn-primary" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Категории -->
  <div class="ts-rail">
    <div class="ts-strip px-4">
      <div class="space-y-4">
        <% @categories.each do |cat| %>
          <%= render "template_categories/category", category: cat %>
        <% end %>
      </div>
    </div>
  </div>
</div>
