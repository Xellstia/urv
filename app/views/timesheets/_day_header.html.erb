<%# app/views/timesheets/_day_header.html.erb %>
<%# locals: day (Date), total_min (Integer) %>

<% pct = day_progress_pct(total_min) %>

<div class="space-y-3">
  <!-- Заголовок дня -->
  <div class="flex items-baseline justify-between">
    <div class="text-xl font-semibold text-slate-800">
      <%= day_title(day) %>
    </div>
    <div class="text-sm text-slate-500">
      <%= format_minutes_hm(total_min) %> / 8h
    </div>
  </div>

  <!-- Прогресс-бар -->
  <div class="relative h-2 rounded-full bg-slate-200">
    <div class="absolute left-0 top-0 h-full rounded-full bg-blue-500"
         style="width: <%= pct %>%"></div>
  </div>
</div>

