<%# Используем общий партиал для формы Tempo %>
<% frame_id_param = local_assigns[:frame_id] || params[:frame_id] || (@card.persisted? ? dom_id(@card) : "template_category_form_#{@category.id}") %>

<%= render "shared/work_form",
      model: [@category, @card],
      system: :tempo,
      mode: (@card.persisted? ? :edit : :new),
      submit_text: (@card.persisted? ? "Сохранить" : "Создать"),
      frame_id: frame_id_param %>
