<%# Кнопка удаления для PresetItem %>
<% pi = local_assigns[:pi] || local_assigns[:preset_item] %>
<% preset = local_assigns[:preset] || pi&.preset %>
<% return unless pi && preset %>

<%= link_to preset_preset_item_path(preset, pi),
            data: { turbo_method: :delete, turbo_confirm: "Удалить строку расписания?" },
            class: "inline-flex h-6 w-6 items-center justify-center rounded hover:bg-red-50 text-slate-700 hover:text-red-600 transition-colors",
            title: "Удалить" do %>
  <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
    <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"/>
  </svg>
<% end %>

