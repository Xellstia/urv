<%= turbo_frame_tag dom_id(pi) do %>
  <div class="group rounded-xl border bg-white p-3 shadow-sm transition
              hover:shadow-md border-amber-300">
    <div class="h-1 -mt-3 -mx-3 rounded-t-xl bg-amber-500"></div>

    <div class="mt-2 flex items-start justify-between gap-3">
      <div class="min-w-0">
        <div class="text-xs uppercase tracking-wide text-gray-500">
          PRESET · <%= (pi.system.presence || "tempo").to_s.upcase %>
          <% if pi.issue_key.present? %> · <%= pi.issue_key %><% end %>
        </div>
        <div class="font-medium truncate">
          <%= pi.description.presence || "Без описания" %>
        </div>
      </div>

      <div class="flex flex-col items-end gap-2">
        <div class="text-sm font-semibold text-gray-800"><%= (pi.minutes_spent || 0) %>m</div>

        <div class="flex gap-2">
          <%= link_to "Редактировать",
                      edit_preset_preset_item_path(pi.preset, pi),
                      data: { turbo_frame: dom_id(pi) },
                      class: "text-xs text-blue-600 hover:underline" %>

          <%= link_to "Удалить",
                      preset_preset_item_path(pi.preset, pi),
                      data: { turbo_method: :delete, turbo_confirm: "Удалить строку?" },
                      class: "text-xs text-red-600 hover:underline" %>
        </div>
      </div>
    </div>
  </div>
<% end %>
